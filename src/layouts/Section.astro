---
const { id, title } = Astro.props
---

<section id={id}>
  <div class="line-section"></div>
  <h3 class="animation-show">{title}</h3>
  <slot />
</section>

<style>
  section {
    margin-top: 60px;
    scroll-margin-top: 65px;
  }
  @media (min-width: 768px) {
    section {
      margin-top: 80px;
    }
  }
</style>
