---
import Section from '@/layouts/Section.astro'
import { projects } from '@cv'
---

<Section id="projects" title="proyectos">
  <nav class="projects-container">
    {
      projects.map((project) => {
        const { name, description, url, image } = project
        return (
          <a
            class="project"
            href={url}
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src={image} alt="name" />
            <div>
              <h4>{name}</h4>
              <p>{description}</p>
            </div>
          </a>
        )
      })
    }
  </nav>
</Section>

<style>
  .projects-container {
    display: grid;
    gap: 30px;
  }

  @media (min-width: 600px) {
    .projects-container {
      grid-template-columns: repeat(3, 1fr);
      overflow-x: scroll;
    }
  }

  .project {
    min-width: 100%;
    border: 3px solid var(--primary-100);
    border-radius: 20px;
    overflow: hidden;
    transition: border-color 0.4s ease;

    div {
      padding: 20px 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }
    h4 {
      color: var(--secondary-100);
    }

    p {
      font-size: 16px;
    }
  }

  @media (min-width: 600px) {
    .project {
      min-width: 400px;
      margin: 20px 0;

      div {
        height: 250px;
      }
    }
  }

  img {
    filter: saturate(0);
    border-bottom: 3px solid var(--primary-100);
    transition:
      border-color 0.4s ease,
      filter 0.4s ease;
  }

  .project:hover,
  .project:hover img {
    border-color: var(--secondary-100);
    filter: saturate(1);
  }
</style>
